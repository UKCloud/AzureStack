{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "apiProfile": "2018-03-01-hybrid",
  "parameters": { },
  "variables": {
    "newZoneName": "[concat(uniqueString(resourceGroup().id), '.ukcloud.com')]",
    "newRecordName": "UKCloud",
    "firstRecordIPAddress": "1.2.3.4",
    "secondRecordIPAddress": "1.2.3.5"
  },
  "resources": [
    {
      "type": "Microsoft.Network/dnszones",
      "name": "[variables('newZoneName')]",
      "location": "global",
      "properties": {}
    },
    {
      "type": "Microsoft.Network/dnszones/a",
      "name": "[concat(variables('newZoneName'), '/', variables('newRecordName'))]",
      "location": "global",
      "dependsOn": [
        "[variables('newZoneName')]"
      ],
      "properties": {
        "TTL": 3600,
        "ARecords": [
          {
            "ipv4Address": "[variables('firstRecordIPAddress')]"
          },
          {
            "ipv4Address": "[variables('secondRecordIPAddress')]"
          }
        ]
      }
    }
  ],
  "outputs": {
    "nameServers": {
      "type": "array",
      "value": "[reference(variables('newZoneName')).nameServers]"
    }
  }
}